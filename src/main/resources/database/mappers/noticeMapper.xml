<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.subin.s4.notice.NoticeDAO">
  	<select id="getList" resultType="com.subin.s4.notice.NoticeDTO" parameterType="com.subin.s4.util.Pager">
  		SELECT * FROM
		    (SELECT ROWNUM R, BK.* FROM
		        (SELECT *
		            FROM NOTICE
		            ORDER BY NUM DESC
		        ) 
		        BK)
		WHERE R between #{startRow} and #{lastRow}
  	</select>
  	
  	<insert id="setInsert">
  		INSERT INTO NOTICE VALUES (notice_num_seq.nextval, #{title}, #{contents}, #{writer}, SYSDATE, 0)
  	</insert>
  	
  	<select id="getSelect" parameterType="com.subin.s4.notice.NoticeDTO" resultType="com.subin.s4.notice.NoticeDTO">
  		SELECT * FROM NOTICE WHERE NUM = #{num}
  	</select>
  	
  	<update id="setUpdate" parameterType="com.subin.s4.notice.NoticeDTO">
  		UPDATE NOTICE SET title = #{title}, contents = #{contents}, writer= #{writer}, regdate = SYSDATE WHERE num = #{num}
  	</update>
  </mapper>